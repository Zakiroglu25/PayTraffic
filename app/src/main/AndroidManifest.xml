<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aris.paytraffic">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".drawerMenu.TransfersActivity"></activity>
        <activity android:name=".drawerMenu.SettingsActivity" />
        <activity android:name=".drawerMenu.PaymentsActivity" />
        <activity android:name=".drawerMenu.InviteActivity" />
        <activity android:name=".drawerMenu.InfoActivity" />
        <activity android:name=".drawerMenu.ConvertToBounce" />
        <activity android:name=".drawerMenu.ContactActivity" />
        <activity android:name=".drawerMenu.BonuceActivity" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>